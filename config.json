{
  "symbols": [
    "BTCUSDT",
    "XRPUSDT",
    "GALAUSDT"
  ],
  "interval": "1h",
  "lookback_days": 30,
  "model_dir": "models",
  "cache_dir": "data_cache",
  "model_version": "v13_hybrid",
  "use_spike_predictor_in_alerts": true,
  "spike_confidence_threshold": 0.6,
  "alert_probability_thresholds": {
    "buy": 0.7,
    "sell": 0.3
  },
  "telemetry": {
    "enable_console_log": true,
    "enable_telegram_alerts": true,
    "enable_dashboard_stream": true,
    "save_json_artifacts": true,
    "reason_mode": "adaptive"
  },
  "telemetry_viewer": {
    "enable_streamlit_ui": true,
    "enable_cli_mode": true,
    "log_dir": "telemetry_logs",
    "show_charts": true,
    "refresh_interval_sec": 60
  },
  "github_artifact_policy": "always_upload",
  "max_log_age_days": 30,
  "train_schedule": "0 0 * * *",
  "alert_interval_minutes": 30
}